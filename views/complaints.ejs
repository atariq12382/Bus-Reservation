<body>
    <%- include('./partials/navbar3') %>
    <%- include('./partials/messages') %>
    <div class= "mainform">
      <form action="/complaints" method="post">
      <!--Header-->
      <div class = "header">
      <h1><b>Complaint Form</b></h1>
          <p>We are available 24/7 to hear from you and resolve your queries.Feel free to tell us your complaint through the given form or visit our nearest office.</p>
            <hr/>
      </div>
      <br><br>
     
      <div class="form-group">
        <label for="title"><b>Complaint Title</b></label> 
        <input type="title" class="form-control" id="title" placeholder="Enter complaint title" name="title" required>
      </div>
       <!-- Name-->
      <div class="form-group">
          <label for="name"><b>Name:</b></label>
          <input type="name" class="form-control" id="name" placeholder="Enter name" name="name" required>
        </div>
        <br>
      <!-- Phone number-->
      <div class="form-group">
          <label for="contact"> <b>Contact: </b> </label>
          <input type="contact" id="contact" class="form-control" placeholder="Enter contact" name = "contact" required>
        </div>
        <br/>
        <div class="form-group">
          <label for="email"> <b>Email: </b> </label>
          <input type="email" id="email" class="form-control" placeholder="email@domain.tld" name = "email" required>
        </div>
        <br>
      <br>
      <!-- Complaint Details-->
      <label for="details"><b>Complaint Details:</b></label>
      <textarea id="details" name="details" placeholder="Enter your complaint details..." style="height:200px" required></textarea>
  
      <!--Submit Button-->
      <button type="submit"  class="btn btn-outline-primary">Submit</button>
      
  
      </form>
  </div>
  <%- include('./partials/footer') %>
</body>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Noto+Sans:wght@700&family=Poppins:wght@400;500;600&display=swap');
  *{
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: "Poppins", sans-serif;
}
</style>
<style>
    
  .mainform{
  margin: 50px 230px 50px 230px;
  padding: 2rem;
  border: 1px solid rgb(224,224,224) ;
  border-radius: 15px;
  box-shadow: 10px 7px 0 rgb(224,224,224);
  background-color: white;
  display: flex;
  }

  .header{
      font-size: 17px;
      font-family: candara;
      display: flex-end;
  }

  input[type=text], select, textarea {
  display: flex;
  width: 100%;
  padding: 12px;
  border: 1px solid #ccc;
  border-radius: 4px;
  box-sizing: border-box;
  margin-top: 6px;
  margin-bottom: 16px;
  resize: vertical;
}

@media screen and (max-width: 680px) {
.header, .mainform, input[type=submit] {
  margin: 0px 0px 0px 0px;
  
}
}


</style>