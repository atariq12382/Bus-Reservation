<body>
    <%- include('./partials/navbar') %>
      <div class="container" style="padding-top: 30px;">
        <div class="table-title">
          <div class="row">
            <div class="col-sm-8">
              <h2>
                <b>Search Result</b>
              </h2>
            </div>
          </div>
        </div>
        <a class="btn btn-success btn-lg" role="button" aria-disabled="true" style="margin-bottom: 5px; float:right" href="/schedule/1">Go Back</a>
        <div class="table-wrapper">
          <table class="table table-striped table-hover table-bordered">
            <thead>
              <tr>
                <th>Route Number</th>
                <th>From</th>
                <th>To</th>
                <th>Date</th>
                <th>Time</th>
                <th>Available</th>
                <th>Fare</th>
                <th>Bus Number</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% for (var a=0; a < routes.length; a++) { %>
                <tr>
                  <td>
                    <%= routes[a].number%>
                  </td>
                  <td>
                    <%= routes[a].from%>
                  </td>
                  <td>
                    <%= routes[a].to%>
                  </td>
                  <td>
                    <%= routes[a].date%>/<%= routes[a].month%>/<%= routes[a].year%>
                  </td>
                  <td>
                    <%= routes[a].time%> pm
                  </td>
                  <td>
                    <%= routes[a].available%>
                  </td>
                  <td>Rs. <%= routes[a].fare%>
                  </td>
                  <td>
                    <%= routes[a].bno%>
                  </td>
                  <td style="align-items: center;"><a class="btn btn-success" role="button" aria-disabled="true" href="/book/<%= routes[a].from%>/<%= routes[a].to%>/<%= routes[a].date%>/<%= routes[a].month%>/<%= routes[a].year%>/<%= routes[a].fare%>">Book</a></td>
                </tr>
                <% } %>
            </tbody>
          </table>
          <% if (pages> 0) { %>
            <ul class="pagination">
              <% if (current==1) { %>
                <li class="disabled"><a class="page-link">First</a></li>
                <% } else { %>
                  <li class="page-item"><a href="/schedule/1" class="page-link">First</a></li>
                  <% } %>
                    <% var i=(Number(current)> 5 ? Number(current) - 4 : 1) %>
                      <% if (i !==1) { %>
                        <li class="disabled"><a class="page-link">...</a></li>
                        <% } %>
                          <% for (; i <=(Number(current) + 4) && i <=pages; i++) { %>
                            <% if (i==current) { %>
                              <li class="active page-item"><a class="page-link">
                                  <%= i %>
                                </a></li>
                              <% } else { %>
                                <li class="page-item"><a href="/schedule/<%= i %>" class="page-link">
                                    <%= i %>
                                  </a></li>
                                <% } %>
                                  <% if (i==Number(current) + 4 && i < pages) { %>
                                    <li class="disabled"><a class="page-link">...</a></li>
                                    <% } %>
                                      <% } %>
                                        <% if (current==pages) { %>
                                          <li class="disabled"><a class="page-link">Last</a></li>
                                          <% } else { %>
                                            <li class="page-item"><a href="/schedule/<%= pages %>"
                                                class="page-link">Last</a></li>
                                            <% } %>
            </ul>
            <% } %>
        </div>
        <%- include('./partials/footer') %>
  </body>
  
<style>
    @import url('https://fonts.googleapis.com/css2?family=Noto+Sans:wght@700&family=Poppins:wght@400;500;600&display=swap');
    *{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: "Poppins", sans-serif;
  }
  </style>