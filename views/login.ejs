<body>
  <%- include('./partials/navbar2') %>
  <div class="center">
    <h1>Login</h1>
    <%- include('./partials/messages') %>
    <form method="post" action="/users/login">
      <div class="txt_field">
        <input type="email"
        id="email"
        name="email"
        required>
        <span></span>
        <label>Email</label>
      </div>
      <div class="txt_field">
        <input type="password"
        id="password"
        name="password"
        required>
        <span></span>
        <label>Password</label>
      </div>
      <div class="pass"><a href="/users/ForgotPassword">Forgot Password</a></div>
      <input type="submit" value="Login">
      <div class="signup_link">
        Not a member? <a href="/users/register">Signup</a>
      </div>
    </form>
  </div>
</body>

<style>
*{
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: "Poppins", sans-serif;
}
body{
  margin: 0;
  padding: 0;
  background-color: whitesmoke;
  height: 100vh;
  overflow: hidden;
}
.center{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 400px;
  background: #28166f;
  border-radius: 10px;
  box-shadow: 10px 10px 15px rgba(0,0,0,0.05);
  margin-top: 35px;
}
.center h1{
  text-align: center;
  padding: 20px 0;
  border-bottom: 1px solid silver;
  color: #fdf5e6;
}
.center form{
  padding: 0 40px;
  box-sizing: border-box;
}
form .txt_field{
  position: relative;
  border-bottom: 2px solid #fdf5e6;
  margin: 30px 0;
}
.txt_field input{
  width: 100%;
  padding: 0 5px;
  height: 40px;
  font-size: 16px;
  border: none;
  background: none;
  outline: none;
}
.txt_field label{
  position: absolute;
  top: 50%;
  left: 5px;
  color: #fdf5e6;
  transform: translateY(-50%);
  font-size: 16px;
  pointer-events: none;
  transition: .5s;
}
.txt_field span::before{
  content: '';
  position: absolute;
  top: 40px;
  left: 0;
  width: 0%;
  height: 2px;
  background: rgb(127, 127, 238);
  transition: .5s;
}
.txt_field input:focus ~ label,
.txt_field input:valid ~ label{
  top: -5px;
  color: rgb(127, 127, 238);
}
.txt_field input:focus ~ span::before,
.txt_field input:valid ~ span::before{
  width: 100%;
}

.pass {
  margin: -5px 0 20px 5px;
  color: #fdf5e6;
  cursor: pointer;
}

.pass a{
  margin: -5px 0 20px 5px;
  color: #fdf5e6;
  cursor: pointer;
}
.pass:hover{
  text-decoration: underline;
}
input[type="submit"]{
  width: 100%;
  height: 50px;
  border: 1px solid;
  background: darkblue;
  border-radius: 25px;
  font-size: 18px;
  color: #e9f4fb;
  font-weight: 700;
  cursor: pointer;
  outline: none;
}
input[type="submit"]:hover{
  border-color: rgb(127, 127, 238);
  transition: .5s;
}
.signup_link{
  margin: 30px 0;
  text-align: center;
  font-size: 16px;
  color: #666666;
}
.signup_link a{
  color: #fdf5e6;
  text-decoration: none;
}
.signup_link a :hover{
  text-decoration: underline;
}

</style>